generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        BigInt   @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  role      Role
  status    Status   @default(active)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  // Relations
  orders Order[]

  @@index([username])
  @@index([email])
  @@index([role])
  @@index([status])
  @@map("users")
}

model MenuItem {
  id          BigInt     @id @default(autoincrement())
  name        String
  category    Category
  price       Decimal    @db.Decimal(10, 2)
  description String?
  image       String?
  isAvailable Boolean    @default(true) @map("is_available")
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @default(now()) @updatedAt @map("updated_at")

  // Relations
  orderItems OrderItem[]

  @@index([category])
  @@index([isAvailable])
  @@index([name])
  @@map("menu_items")
}

model Order {
  id           BigInt      @id @default(autoincrement())
  orderNumber  String      @unique @map("order_number")
  customerName String      @map("customer_name")
  tableNumber  Int?        @map("table_number")
  orderType    OrderType   @map("order_type")
  subtotal     Decimal     @db.Decimal(10, 2)
  tax          Decimal     @db.Decimal(10, 2)
  total        Decimal     @db.Decimal(10, 2)
  amountPaid   Decimal     @db.Decimal(10, 2) @map("amount_paid")
  changeAmount Decimal     @db.Decimal(10, 2) @map("change_amount")
  createdBy    BigInt      @map("created_by")
  createdAt    DateTime    @default(now()) @map("created_at")

  // Relations
  cashier    User        @relation(fields: [createdBy], references: [id])
  orderItems OrderItem[]

  @@index([orderNumber])
  @@index([createdAt])
  @@index([orderType])
  @@index([createdBy])
  @@index([customerName])
  @@map("orders")
}

model OrderItem {
  id             BigInt  @id @default(autoincrement())
  orderId        BigInt  @map("order_id")
  menuItemId     BigInt  @map("menu_item_id")
  menuItemName   String  @map("menu_item_name")
  menuItemPrice  Decimal @db.Decimal(10, 2) @map("menu_item_price")
  quantity       Int
  lineTotal      Decimal @db.Decimal(10, 2) @map("line_total")

  // Relations
  order    Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])

  @@index([orderId])
  @@index([menuItemId])
  @@map("order_items")
}

// Enums
enum Role {
  admin
  cashier
}

enum Status {
  active
  inactive
}

enum Category {
  Food
  Beverages
  Desserts
}

enum OrderType {
  Dine_In @map("Dine In")
  Take_Away @map("Take Away")
}